<div class="d-flex justify-content-center align-items-center">
  <h1 class="text-center">Productos</h1>
  <a href="/carts/{{cartId}}">
        <img src="img/CarritoImg.png"
            alt="Logo de la tienda" class="imgCarrito">
        </a>
  
  
</div>
<div class="container">
    <div class="row">
        {{#each productos}}
        <div class="card col-xl-4 col-md-6 col-sm-12">
            <img src="{{img}}" alt="" class="card-img-top">
            <div class="card-body">
                <h2 class="card-title">{{title}}</h2>
                <p class="card-text">{{description}}</p>
                <p class="card-text">Precio: ${{price}}</p>
                <p class="card-text">Stock: {{stock}}</p>
                <form action="/api/carts/{{../cartId}}/product/{{id}}" method="POST">
                    <button class="btnMulti" type="submit">Agregar al Carrito</button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</div>





<div class="container mt-3">
    <div class="row text-center">
        {{#if hasPrevPage}}
        <a class="productsPag" href="/products?page={{prevPage}}"> Anterior </a>
        {{/if}}
        {{#if hasNextPage}}
        <a class="productsPag" href="/products?page={{nextPage}}"> Siguiente </a>
        {{/if}}
        <p>Pagina {{currentPage}} de {{totalPages}} </p>
    </div>
</div>